@model MyStore.Business.Product

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Product</h2>

<div class="alert alert-danger">
    <h4>
Are you sure you want to delete this product?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductId)</dd>
            
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>
            
            <dt class="col-sm-3"> Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            
            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitsInStock)</dd>
            
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="ProductId" />
    <input type="submit" value="Xóa" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>