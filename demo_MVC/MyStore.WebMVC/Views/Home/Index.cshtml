@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MyStore</h1>
    <p>Manage your products, categories, and members efficiently with our modern, intuitive interface designed for the future of e-commerce.</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Manage your product inventory with ease. Add, edit, and organize your products with our intuitive interface designed for maximum efficiency.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Organize products by categories for better management and easier navigation. Create hierarchical structures that make sense for your business.</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-success">Add Product</a>
                </div>
            </div>
        </div>
    </div>
</div>