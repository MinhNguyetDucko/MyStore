@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với MyStore</h1>
    <p>Hệ thống quản lý cửa hàng đơn giản</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý sản phẩm</h5>
                    <p class="card-text">Thêm, sửa, xóa và xem danh sách sản phẩm</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Xem sản phẩm</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thêm sản phẩm mới</h5>
                    <p class="card-text">Tạo sản phẩm mới cho cửa hàng</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-success">Thêm sản phẩm</a>
                </div>
            </div>
        </div>
    </div>
</div>