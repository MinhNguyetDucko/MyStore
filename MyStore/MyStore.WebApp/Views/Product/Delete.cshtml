@model MyStore.BusinessObjects.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductId)</dd>
            
            <dt class="col-sm-3">Tên sản phẩm</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>
            
            <dt class="col-sm-3">Danh mục</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            
            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitsInStock)</dd>
            
            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="ProductId" />
    <input type="submit" value="Xóa" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>